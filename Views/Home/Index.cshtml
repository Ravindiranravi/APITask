@using ApiConsoleproject.Controllers
@{
    ViewData["Title"] = "All Reservations";
}
@model IEnumerable<Reservation>

<style>
    .table-custom {
        border: 2px solid #007bff; 
    }
    .table-custom th,
    .table-custom td {
        border: 1px solid #007bff; 
    }
    .table-custom thead th {
        background-color: #007bff; 
        color: white; 
    }
    .table-custom tbody tr:hover {
        background-color: #f1f1f1;
    }
</style>

<div class="container" style="color:darkred">
    <h1 class="display-4">Reservations Details</h1>
    <div class="mb-3">
        <a asp-action="AddReservation" class="btn btn-primary">Book Ticket</a>
        <a asp-action="GetReservation" class="btn btn-secondary">Get Reservation</a>
    </div>

    <table class="table table-striped table-bordered table-custom">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Start Location</th>
                <th>End Location</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td>@r.Name</td>
                    <td>@r.StartLocation</td>
                    <td>@r.EndLocation</td>
                    <td>
                        <a asp-action="UpdateReservation" asp-route-id="@r.Id" class="btn btn-warning btn-sm">Update</a>
                    </td>
                    <td>
                        <form asp-action="DeleteReservation" method="post" onsubmit="return confirm('Are you sure you want to delete this reservation?');">
                            <input type="hidden" name="ReservationId" value="@r.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
